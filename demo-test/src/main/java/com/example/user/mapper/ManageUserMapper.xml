<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.user.dao.ManageUserDao">
	<resultMap id="ManageUserMap" type="com.example.user.entity.ManageUser">
		
		<id column="user_id" property="userId"/>
		<result column="user_name" property="userName"/>
		<result column="user_password" property="userPassword"/>
		<result column="is_enable" property="isEnable"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>

	<!--保存 -->
	<insert id="saveManageUser" parameterType="com.example.user.entity.ManageUser" 	useGeneratedKeys="true"
		keyProperty="userId"
												 >
		insert into manage_user 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userId != null">
				user_id,
			</if>
			<if test="userName != null">
				user_name,
			</if>
			<if test="userPassword != null">
				user_password,
			</if>
			<if test="isEnable != null">
				is_enable,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="userId != null">
				#{userId},
			</if>
			<if test="userName != null">
				#{userName},
			</if>
			<if test="userPassword != null">
				#{userPassword},
			</if>
			<if test="isEnable != null">
				#{isEnable},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
		</trim>
	</insert>
	
	<!--修改-->
	<update id="updateManageUserById" parameterType="com.example.user.entity.ManageUser">
		update manage_user 
		<set>
			<if test="userId != null">
				user_id=#{userId},
			</if>
			<if test="userName != null">
				user_name=#{userName},
			</if>
			<if test="userPassword != null">
				user_password=#{userPassword},
			</if>
			<if test="isEnable != null">
				is_enable=#{isEnable},
			</if>
			<if test="createTime != null">
				create_time=#{createTime},
			</if>
			<if test="updateTime != null">
				update_time=#{updateTime},
			</if>
		</set>
		where 
		user_id=#{userId}
	</update>
	
	<!--查询-->
	<select id="selectManageUserById" resultMap="ManageUserMap" parameterType="java.lang.Long">
		select *
		from manage_user 
		where
		user_id=#{userId}
	</select>

	<!--查询-->
	<select id="queryManageUserByMap" resultMap="ManageUserMap" parameterType="java.util.Map">
		select *
		from manage_user
		where 1=1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="userName != null">
			and user_name like  CONCAT('%',#{userName},'%')
        </if>
        <if test="isEnable != null and isEnable !=''">
            and is_enable = #{isEnable}
        </if>
	</select>

	<!--查询-->
	<select id="selectManageUserByUserName" resultMap="ManageUserMap" parameterType="java.lang.String">
		select *
		from manage_user
		where
		user_name=#{userName}
	</select>

	<!-- 删除用户 -->
	<delete id="deleteManageUserByUserId" parameterType="java.lang.Long">
		delete from manage_user where user_id=#{ userId}
	</delete>

	<!--修改用户启用状态-->
	<update id="changeUserStatus">
		update manage_user set
		is_enable = #{isEnable}
		where user_id in
		<foreach collection="userIds" index="index" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>